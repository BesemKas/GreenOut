@model GreenOut.Models.CheckoutViewModel

<h2>Checkout</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>R @item.Product.Price</td>
                <td>R @(item.Quantity * item.Product.Price)</td>
                
            </tr>
        }
    </tbody>
</table>
@* no payment process implemented for this project *@
<a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Pay">
    Continue to payment
</a>



