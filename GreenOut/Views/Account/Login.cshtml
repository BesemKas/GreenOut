@model GreenOut.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div col-md-6 offset-3>
        <h4>Log in to your Account</h4>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary = "ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-label"/>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-label" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <input class="btn btn-outline-secondary float right" type="submit" value="Log in"/>
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Don`t have an Account yet? Register Here!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>