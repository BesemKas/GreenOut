@model IEnumerable<GreenOut.Models.Product>

@{
    ViewData["Title"] = "Inventory";
}


<div class="d-flex justify-content-between mb-3">
    <h1>Inventory</h1>
    <a asp-area="" asp-controller="Admin" asp-action="Create">
        <button type="button" class="btn btn-primary">
            Create New
        </button>
    </a>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price) (ZAR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductID" data-bs-toggle="modal" data-bs-target="#_@item.ProductID">Preview</a> |
                    
                    //broken
                    <a asp-action="Delete" asp-route-id="@item.ProductID" method="post">Delete</a> 
            </td>
        </tr>
            <!-- Modal -->
            <div class="modal fade" id="_@item.ProductID" tabindex="-1" aria-labelledby="productDetails" aria-hidden="true">
                <div class="modal-lg modal-dialog modal-dialog-centered ">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="modalTitle"> @Html.DisplayFor(modelItem => item.Name)</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body d-flex flex-column">
                            @Html.Partial("Preview", item)
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary"><i class="bi bi-cart4"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        } 
       
    </tbody>
</table>

